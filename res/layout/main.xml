<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ToggleButton
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/toggleButton1" android:layout_gravity="left|center_vertical"
            android:textOff="Экран sms отключен" android:textOn="Экран sms включен"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Здесь будет список SMS"
            android:id="@+id/textView1" android:layout_gravity="left|center_vertical"/>
</LinearLayout>